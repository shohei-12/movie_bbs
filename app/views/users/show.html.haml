= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload'
.user
    = render 'shared/flash'

    %p= @user.name

    = link_to 'ユーザー情報を編集する', edit_user_path(@user)

    - @posts.each do |post|
        .user-post
            %p= post.title
            %p= post.content
            - if current_user?(@user)
                = link_to '削除する', post, method: :delete, data: { confirm: '本当に削除しますか？' }

    = paginate @posts
